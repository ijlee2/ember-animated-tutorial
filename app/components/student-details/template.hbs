<header {{fade-up id=student.id}}>
    <h1 data-test-name>{{student.fullName}}</h1>
</header>

<section
    class="student-details__profile-image"
    {{fade-up id=student.id}}
>
    <ProfileImage @imageUrl={{student.imageUrl}} />
</section>

<section
    class="student-details__email"
    {{fade-up id=student.id delay=50}}
>
    <header>
        <h2>Email</h2>
    </header>

    <a
        data-test-email
        href="mailto:{{student.email}}"
        title={{student.email}}
    >
        {{student.email}}
    </a>
</section>

<section
    class="student-details__phone"
    {{fade-up id=student.id delay=150}}
>
    <header>
        <h2>Phone</h2>
    </header>

    <a
        data-test-phone
        href="tel:{{student.internationalPhone}}"
        title={{student.phone}}
    >
        {{student.phone}}
    </a>
</section>

<section
    class="student-details__education"
    {{fade-up id=student.id delay=250}}
>
    <header>
        <h2>Education</h2>
    </header>

    <ul>
        {{#each this.resume.degrees as |degree|}}
            <li data-test-degree>{{degree}}</li>
        {{/each}}
    </ul>
</section>

<section
    class="student-details__experiences"
    {{fade-up id=student.id delay=350}}
>
    <header>
        <h2>Experiences</h2>
    </header>

    <ul class="my-list">
        {{#each this.resume.experiences as |experience|}}
            <li
                data-test-experience
                class="item"
            >
                <h3 data-test-title class="item__title">
                    {{experience.position}} at {{experience.company}}
                </h3>

                <ul>
                    {{#each experience.achievements as |achievement|}}
                        <li data-test-achievement class="item__achievement">
                            {{achievement}}
                        </li>
                    {{/each}}
                </ul>
            </li>
        {{/each}}
    </ul>
</section>

<section
    class="student-details__skills"
    {{fade-up id=student.id delay=450}}
>
    <header>
        <h2>Skills</h2>
    </header>

    <ul>
        {{#each (sort-by "type" "name" this.resume.skills) as |skill|}}
            <li
                data-test-skill
                class="item item--{{skill.type}}"
            >
                {{skill.name}}
            </li>
        {{/each}}
    </ul>
</section>